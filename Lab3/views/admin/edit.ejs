<%- include('header'); %>

<div class="container mt-5">
    <form action="/edit/<%= product.id %>" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="name" class="form-label">Tên sản phẩm:</label>
            <input type="text" id="name" name="name" class="form-control" value="<%= product.name %>" required>
        </div>

        <div class="mb-3">
            <label for="price" class="form-label">Giá sản phẩm:</label>
            <input type="number" id="price" name="price" class="form-control" value="<%= product.price %>" required>
        </div>

        <div class="mb-3">
            <label for="short_description" class="form-label">Mô tả:</label>
            <textarea id="short_description" name="short_description" class="form-control" required><%= product.short_description %></textarea>
        </div>

        <div class="mb-3">
            <label for="categories" class="form-label">Danh mục:</label>
            <select id="categories" name="categories_id" class="form-select">
                <% categories.forEach(function(category) { %>
                    <option value="<%= category.id %>" <% if (category.id === product.categories_id) { %>selected<% } %>><%= category.name %></option>
                <% }) %>
            </select>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Hình ảnh:</label>
            <input type="file" id="image" name="productImage" class="form-control" accept="images/*">
            <img src="../images<%= product.image %>" width="100px" height="100px" alt="">
        </div>

        <button type="submit" class="btn btn-primary">Cập nhật</button>
        <a href="/list" type="submit" class="btn btn-danger">Huỷ</a>

    </form>
</div>

<%- include('footer'); %>
